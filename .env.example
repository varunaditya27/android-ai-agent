# Android AI Agent - Environment Configuration
# =============================================
# Copy this file to .env and fill in your values

# ===================
# LLM Configuration
# ===================
# OpenAI API key (required for GPT-4o vision)
OPENAI_API_KEY=sk-your-openai-api-key

# OpenAI API base URL (optional, for Azure OpenAI or other providers)
# OPENAI_API_BASE=https://api.openai.com/v1

# Model to use for vision tasks (default: gpt-4o)
LLM_MODEL=gpt-4o

# Maximum tokens for LLM responses
LLM_MAX_TOKENS=4096

# Temperature for LLM (0.0 = deterministic, 1.0 = creative)
LLM_TEMPERATURE=0.1

# ===================
# Cloud Device Configuration
# ===================
# Cloud provider: "limrun" or "browserstack"
CLOUD_PROVIDER=limrun

# Limrun Configuration
LIMRUN_API_KEY=your-limrun-api-key
LIMRUN_API_URL=https://api.limrun.com/v1

# BrowserStack Configuration (alternative)
BROWSERSTACK_USERNAME=your-browserstack-username
BROWSERSTACK_ACCESS_KEY=your-browserstack-access-key
BROWSERSTACK_API_URL=https://api-cloud.browserstack.com/app-automate

# Default device to use (optional)
DEFAULT_DEVICE_ID=

# ===================
# Server Configuration
# ===================
# Server host and port
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Enable debug mode (set to false in production)
DEBUG=true

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ===================
# Redis Configuration (for production session storage)
# ===================
REDIS_URL=redis://localhost:6379/0

# ===================
# Agent Configuration
# ===================
# Maximum steps per task (to prevent infinite loops)
MAX_STEPS=50

# Step timeout in seconds
STEP_TIMEOUT=30.0

# Screenshot quality (1-100)
SCREENSHOT_QUALITY=85

# Enable vision-based UI detection
ENABLE_VISION=true

# Enable accessibility tree parsing
ENABLE_ACCESSIBILITY_TREE=true

# Default language for accessibility announcements
DEFAULT_LANGUAGE=en

# ===================
# Security Configuration
# ===================
# API key for authenticating requests (optional, for production)
# API_KEY=your-secure-api-key

# CORS origins (comma-separated, use * for development only)
CORS_ORIGINS=*
