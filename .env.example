# Android AI Agent - Environment Configuration
# =============================================
# Copy this file to .env and fill in your values

# ===================
# LLM Configuration (Google Gemini - FREE tier available)
# ===================
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your-gemini-api-key

# Model to use for vision tasks
# Options: gemini-2.0-flash (recommended), gemini-2.0-flash-lite, gemini-1.5-pro, gemini-1.5-flash
LLM_MODEL=gemini-2.0-flash

# Maximum output tokens for LLM responses
LLM_MAX_OUTPUT_TOKENS=8192

# Temperature for LLM (0.0 = deterministic, 2.0 = creative)
LLM_TEMPERATURE=0.1

# Sampling parameters
LLM_TOP_P=0.95
LLM_TOP_K=40

# ===================
# Device Configuration
# ===================
# Device provider: "adb" (FREE - local emulator), "limrun" (paid), "browserstack" (paid)
# RECOMMENDED: Use "adb" with Android Studio Emulator (completely FREE)
DEVICE_PROVIDER=adb

# ADB Device Settings (for local emulator - FREE)
# Leave empty to auto-detect the first connected device/emulator
ADB_DEVICE_SERIAL=

# ===================
# OPTIONAL: Paid Cloud Providers (if not using local emulator)
# ===================
# Limrun Configuration (paid service)
# LIMRUN_API_KEY=your-limrun-api-key
# LIMRUN_API_URL=https://api.limrun.com/v1

# BrowserStack Configuration (paid service)
# BROWSERSTACK_USERNAME=your-browserstack-username
# BROWSERSTACK_ACCESS_KEY=your-browserstack-access-key
# BROWSERSTACK_API_URL=https://api-cloud.browserstack.com/app-automate

# ===================
# Server Configuration
# ===================
# Server host and port
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Enable debug mode (set to false in production)
DEBUG=true

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ===================
# Redis Configuration (for production session storage)
# ===================
REDIS_URL=redis://localhost:6379/0

# ===================
# Agent Configuration
# ===================
# Maximum steps per task (to prevent infinite loops)
MAX_STEPS=50

# Step timeout in seconds
STEP_TIMEOUT=30.0

# Screenshot quality (1-100)
SCREENSHOT_QUALITY=85

# Enable vision-based UI detection
ENABLE_VISION=true

# Enable accessibility tree parsing
ENABLE_ACCESSIBILITY_TREE=true

# Default language for accessibility announcements
DEFAULT_LANGUAGE=en

# ===================
# Security Configuration
# ===================
# API key for authenticating requests (optional, for production)
# API_KEY=your-secure-api-key

# CORS origins (comma-separated, use * for development only)
CORS_ORIGINS=*

# ===================
# FREE SETUP GUIDE
# ===================
# 1. Get a FREE Gemini API key: https://aistudio.google.com/apikey
# 2. Install Android Studio: https://developer.android.com/studio
# 3. Create an Android Virtual Device (AVD) in Android Studio
# 4. Start the emulator
# 5. Run this application with DEVICE_PROVIDER=adb
# 
# No paid services required!
